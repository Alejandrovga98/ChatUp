<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jollylodger"
            android:textSize="50sp"
            android:text="Chat Up"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/azultitulo"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="220dp"
            android:layout_height="180dp"
            android:src="@drawable/chatuplogo"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Share your smile"
            android:textSize="35sp"
            android:fontFamily="@font/italianno"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="and your adventures"
            android:textSize="35sp"
            android:fontFamily="@font/italianno"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="with this world"
            android:textSize="35sp"
            android:fontFamily="@font/italianno"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Enjoy!"
            android:textSize="35sp"
            android:fontFamily="@font/italianno"/>
        <Button
            android:id="@+id/signInBTN"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Sign in"
            android:textSize="25sp"
            android:fontFamily="@font/gothica1"
            android:backgroundTint="@color/azul"/>
        <Button
            android:id="@+id/logInBTN"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Log in"
            android:textSize="25sp"
            android:fontFamily="@font/gothica1"
            android:backgroundTint="@color/azul"/>


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>